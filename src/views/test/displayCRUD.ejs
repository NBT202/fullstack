<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
    <style>
        table,
        th,
        td {
            border: 1px solid #333;
            border-collapse: collapse;
        }

        table {
            width: 100%;
            text-align: center;
        }

        .btn-edit,
        .btn-delete {
            outline: none;
            border: none;
            height: 25px;
            width: 60px;
            border-radius: 3px;
            cursor: pointer;
            display: inline-block;


        }

        .btn-delete {
            background-color: rgb(234, 15, 15);
        }

        .btn-edit {
            background-color: orange;

        }
    </style>
</head>

<body>
    <table>
        <tr>
            <th>FistName</th>
            <th>LastName</th>
            <th>Email</th>
            <th>Address</th>
            <th>PhoneNumber</th>
            <th>Actions</th>

        </tr>
        <% for(let i=0; i < dataTable.length; i++) { %>
            <tr>
                <td>
                    <%= dataTable[i].firstName %>
                </td>
                <td>
                    <%= dataTable[i].lastName %>
                </td>
                <td>
                    <%= dataTable[i].email %>
                </td>
                <td>
                    <%= dataTable[i].address %>
                </td>
                <td>
                    <%= dataTable[i].phonenumber %>
                </td>
                <td>
                    <a href="edit-crud?id=<%= dataTable[i].id %>" class="btn-edit" type="button">Edit</a>
                    <a href="delete-crud?id= <%= dataTable[i].id %>" class="btn-delete" type="button">Delete</a>
                </td>
            </tr>
            <% } %>
    </table>
</body>

</html>